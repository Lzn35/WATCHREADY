# WATCH Flask Application - Environment Configuration Template
# Copy this file to .env and replace with your actual values
# NEVER commit .env to version control!

# Security: Generate a secure secret key with:
# python -c "import secrets; print(secrets.token_urlsafe(48))"
SECRET_KEY=replace-with-long-secret-from-command-above

# Database configuration
# SQLite (default for development):
DATABASE_URL=sqlite:///instance/watch_db.sqlite
# MySQL example:
# DATABASE_URL=mysql+pymysql://username:password@localhost/watch_db

# Debug mode - ONLY set to True in development, NEVER in production
DEBUG=False

# File upload security
MAX_CONTENT_LENGTH=10485760
UPLOAD_FOLDER=instance/uploads
ALLOWED_EXTENSIONS=jpg,jpeg,png,pdf,docx,doc,txt,mp4,avi,mov,wmv,mp3,wav,zip,rar,7z

# Session security - set to True in production with HTTPS
SESSION_COOKIE_SECURE=False

# Tesseract OCR path (if using OCR features)
TESSERACT_PATH=
